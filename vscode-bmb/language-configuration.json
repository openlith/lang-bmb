{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*@node\\b",
      "end": "^(?=\\s*@node\\b|$)"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*|%[a-zA-Z0-9_]+|_[a-zA-Z0-9_]+|@[a-z]+"
}
