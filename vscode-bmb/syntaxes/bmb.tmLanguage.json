{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BMB",
  "scopeName": "source.bmb",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#labels" },
    { "include": "#opcodes" },
    { "include": "#registers" },
    { "include": "#types" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#contracts" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.bmb",
      "begin": "#",
      "end": "$"
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive.node.bmb",
          "match": "@node\\b"
        },
        {
          "name": "keyword.control.directive.params.bmb",
          "match": "@params\\b"
        },
        {
          "name": "keyword.control.directive.returns.bmb",
          "match": "@returns\\b"
        },
        {
          "name": "keyword.control.directive.pre.bmb",
          "match": "@pre\\b"
        },
        {
          "name": "keyword.control.directive.post.bmb",
          "match": "@post\\b"
        },
        {
          "name": "keyword.control.directive.invariant.bmb",
          "match": "@invariant\\b"
        },
        {
          "name": "keyword.control.directive.struct.bmb",
          "match": "@struct\\b"
        },
        {
          "name": "keyword.control.directive.enum.bmb",
          "match": "@enum\\b"
        },
        {
          "name": "keyword.control.directive.import.bmb",
          "match": "@import\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.label.definition.bmb",
          "match": "^\\s*(_[a-zA-Z0-9_]+):",
          "captures": {
            "1": { "name": "entity.name.label.bmb" }
          }
        },
        {
          "name": "entity.name.label.reference.bmb",
          "match": "(?<=\\s)_[a-zA-Z0-9_]+(?!:)"
        }
      ]
    },
    "opcodes": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.bmb",
          "match": "\\b(add|sub|mul|div|mod)\\b"
        },
        {
          "name": "keyword.operator.comparison.bmb",
          "match": "\\b(eq|ne|lt|le|gt|ge)\\b"
        },
        {
          "name": "keyword.control.flow.bmb",
          "match": "\\b(jmp|jif|ret|call|xcall)\\b"
        },
        {
          "name": "keyword.operator.memory.bmb",
          "match": "\\b(mov|load|store)\\b"
        },
        {
          "name": "keyword.other.io.bmb",
          "match": "\\bprint\\b"
        }
      ]
    },
    "registers": {
      "name": "variable.other.register.bmb",
      "match": "%[a-zA-Z0-9_]+"
    },
    "types": {
      "name": "support.type.primitive.bmb",
      "match": "\\b(i32|i64|f32|f64|bool|void)\\b"
    },
    "keywords": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.bmb",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.bmb",
          "match": "\\bfalse\\b"
        },
        {
          "name": "keyword.other.ret.bmb",
          "match": "\\bret\\b(?=\\s*[=!<>])"
        },
        {
          "name": "support.function.old.bmb",
          "match": "\\bold\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.bmb",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.bmb",
          "match": "\\\\[nrt0\"\\\\]"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.bmb",
          "match": "-?\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.bmb",
          "match": "-?\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.bmb",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.bmb",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.bmb",
          "match": "(\\+|-|\\*|/|%)"
        }
      ]
    },
    "contracts": {
      "patterns": [
        {
          "name": "meta.contract.expression.bmb",
          "begin": "(?<=@pre|@post|@invariant\\s+_[a-zA-Z0-9_]+)\\s+",
          "end": "$",
          "patterns": [
            { "include": "#keywords" },
            { "include": "#operators" },
            { "include": "#numbers" },
            { "include": "#types" }
          ]
        }
      ]
    }
  }
}
